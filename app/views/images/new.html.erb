<div class="new-image-view row col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3">
  <div class="row">
    <div class="col-6">
      <h1>New Image</h1>
      <%= form_for @image, url: images_path do |i| %>
          <div class=".form-group">
            <%= i.label :title %>
            <%= i.text_field :title ,class:'form-control'%>
          </div>
          <div class=".form-group">
            <%= i.label 'File' %>
            <%= i.file_field :file_object %>
          </div>
          <div class=".form-group">
            <%= i.label :alt %>
            <%= i.text_field :alt ,class:'form-control'%>
          </div>
          <div class=".form-group">
            <%= i.label :width %>
              <%= number_field(:image ,:width, step:1,class:'form-control') %>
          </div>
          <div class=".form-group">
            <%= i.label :height %>
            <%= number_field(:image ,:height, step:1,class:'form-control') %>
          </div>
          <%= i.submit %>
      <% end %>
    </div>
  </div>
</div>